<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white_2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_toolbar_1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/layout_sandbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/black_color"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="128dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/btn_black"
            android:elevation="5dp"
            android:src="@drawable/btn_black"
            app:layout_constraintBottom_toTopOf="@+id/red_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside" />

        <ImageButton
            android:id="@+id/red_color"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_red"
            android:elevation="5dp"
            android:src="@drawable/btn_red"
            app:layout_constraintBottom_toTopOf="@+id/orange_color"
            app:layout_constraintEnd_toEndOf="@+id/black_color"
            app:layout_constraintStart_toStartOf="@+id/black_color"
            app:layout_constraintTop_toBottomOf="@+id/black_color" />

        <ImageButton
            android:id="@+id/orange_color"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_orange"
            android:elevation="5dp"
            android:src="@drawable/btn_orange"
            app:layout_constraintBottom_toTopOf="@+id/yellow_color"
            app:layout_constraintEnd_toEndOf="@+id/red_color"
            app:layout_constraintStart_toStartOf="@+id/red_color"
            app:layout_constraintTop_toBottomOf="@+id/red_color" />

        <ImageButton
            android:id="@+id/yellow_color"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_yellow"
            android:elevation="5dp"
            android:src="@drawable/btn_yellow"
            app:layout_constraintBottom_toTopOf="@+id/green_color"
            app:layout_constraintEnd_toEndOf="@+id/orange_color"
            app:layout_constraintStart_toStartOf="@+id/orange_color"
            app:layout_constraintTop_toBottomOf="@+id/orange_color" />

        <ImageButton
            android:id="@+id/green_color"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_green"
            android:elevation="5dp"
            android:src="@drawable/btn_green"
            app:layout_constraintBottom_toTopOf="@+id/blue_color"
            app:layout_constraintEnd_toEndOf="@+id/yellow_color"
            app:layout_constraintStart_toStartOf="@+id/yellow_color"
            app:layout_constraintTop_toBottomOf="@+id/yellow_color" />

        <ImageButton
            android:id="@+id/blue_color"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_blue"
            android:elevation="5dp"
            android:src="@drawable/btn_blue"
            app:layout_constraintBottom_toTopOf="@+id/indigo_color"
            app:layout_constraintEnd_toEndOf="@+id/green_color"
            app:layout_constraintStart_toStartOf="@+id/green_color"
            app:layout_constraintTop_toBottomOf="@+id/green_color" />

        <ImageButton
            android:id="@+id/indigo_color"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_indigo"
            android:elevation="5dp"
            android:src="@drawable/btn_indigo"
            app:layout_constraintBottom_toTopOf="@+id/violet_color"
            app:layout_constraintEnd_toEndOf="@+id/blue_color"
            app:layout_constraintStart_toStartOf="@+id/blue_color"
            app:layout_constraintTop_toBottomOf="@+id/blue_color" />

        <ImageButton
            android:id="@+id/violet_color"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="128dp"
            android:background="@drawable/btn_violet"
            android:elevation="5dp"
            android:src="@drawable/btn_violet"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/indigo_color"
            app:layout_constraintStart_toStartOf="@+id/indigo_color"
            app:layout_constraintTop_toBottomOf="@+id/indigo_color" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_toolbar_2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/layout_sandbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_save"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_upload"
            app:layout_constraintBottom_toTopOf="@+id/btn_undo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <ImageView
            android:id="@+id/btn_undo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_undo"
            app:layout_constraintBottom_toTopOf="@+id/btn_clear"
            app:layout_constraintEnd_toEndOf="@+id/btn_save"
            app:layout_constraintStart_toStartOf="@+id/btn_save"
            app:layout_constraintTop_toBottomOf="@+id/btn_save"
            app:layout_constraintVertical_chainStyle="packed" />

        <ImageView
            android:id="@+id/btn_clear"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/btn_undo"
            app:layout_constraintStart_toStartOf="@+id/btn_undo"
            app:layout_constraintTop_toBottomOf="@+id/btn_undo"
            app:srcCompat="@drawable/ic_clear" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_sandbox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/layout_size"
        app:layout_constraintEnd_toStartOf="@+id/layout_toolbar_1"
        app:layout_constraintStart_toEndOf="@+id/layout_toolbar_2"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/paint_view"
            layout="@layout/paint_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.slider.Slider
            android:id="@+id/slider_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"
            android:stepSize="4.0"
            android:valueFrom="4.0"
            android:valueTo="32.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>