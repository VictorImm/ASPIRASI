<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingFragment">

    <ImageView
        android:id="@+id/bg_pen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-256dp"
        android:layout_marginEnd="-256dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_landing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bg_dark"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha=".2"
        android:src="@android:drawable/screen_background_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bg_shadow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha=".5"
        android:src="@drawable/bg_shadow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="192dp"
        android:layout_height="64dp"
        android:drawableLeft="@drawable/ic_draw"
        android:drawableTint="@color/like_yellow"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/british_green"
        android:text="Draw"
        android:textStyle="bold"
        android:textColor="@color/like_yellow"
        app:strokeColor="@color/like_yellow"
        app:strokeWidth="2dp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_aspirasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/british_green"
        android:text="ASPIRASI"
        android:textColor="@color/like_yellow"
        android:textSize="72sp"
        android:textStyle="bold"
        android:clipToPadding="false"
        app:layout_constraintBottom_toTopOf="@+id/line_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <View
        android:id="@+id/line_1"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@color/like_yellow"
        app:layout_constraintBottom_toTopOf="@+id/tv_lorem"
        app:layout_constraintEnd_toEndOf="@+id/tv_aspirasi"
        app:layout_constraintStart_toStartOf="@+id/tv_aspirasi"
        app:layout_constraintTop_toBottomOf="@+id/tv_aspirasi" />

    <TextView
        android:id="@+id/tv_lorem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/like_yellow"
        android:layout_marginTop="4dp"
        android:textAlignment="textStart"
        android:fontFamily="@font/british_green"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit"
        android:maxWidth="320dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/line_1"
        app:layout_constraintTop_toBottomOf="@+id/line_1" />

</androidx.constraintlayout.widget.ConstraintLayout>